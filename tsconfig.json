{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "es2015",
    "lib": [
      "es2017",
      "dom"
    ],
    "types": ["angular", "angular-mocks", "jquery", "node", "angular-cookies", "angular-route"]
  },
  "exclude": [
    "angular-cli-tools/**/*.ts",
    "node_modules"
  ]
}